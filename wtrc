#!bin/bash

# adjust the zsh history limit
# export HISTFILE="$HOME/.history"
export HISTSIZE=10000000
export SAVEHIST=$HISTSIZE # won't work without this env var
unset LD_PRELOAD
# setopt hist_ignore_all_dups

if [ -f .envrc ]; then
  source .envrc;
fi

export QT_SCALE_FACTOR=1.0 # for 1980x1680 display
export WT_HOME=/home/wierton

# Vivado
PATH="$PATH:/opt/Xilinx/Vivado/2019.2/bin"

# cargo
PATH="$PATH:$WT_HOME/.cargo/bin"

alias cls='clear && echo -en "\e[3J"'

function clear_proxy() {
  unset all_proxy
  unset ftp_proxy
  unset http_proxy
  unset https_proxy
  unset no_proxy

  unset ALL_PROXY
  unset FTP_PROXY
  unset HTTP_PROXY
  unset HTTPS_PROXY
  unset NO_PROXY
}

function sedr() {
  sed -i "s/$1/$2/g" `grep -rl "$1"`
}

function renamer() {
	find . -name "*$1*" -print0 | rename -0 "s/$1/$2/g"
  return $?
}

function banio() {
  nohup $* </dev/null 1>/dev/null 2>&1 &
}

